    <h1>Add Product</h1>
    <div class="table-responsive" style="margin: 20px;">
        <form action="/createProduct" method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="txtName">
            <div style="color: red;">{{nameError}}</div> 
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input type="text" name="txtPrice" id="price" class="form-control">
            <div style="color: red;">{{priceError}}</div> 
        </div>
        <div class="form-group">
            <label for="picture">Picture URL</label>
            <input type="text" name="txtPicture" id="picture" class="form-control">
        </div>  
        <div class="form-group">
            <label for="picture">Sale</label>
            <input type="text" name="sale" id="" class="form-control">
        </div>       
        <input type="submit" value="Submit" class="btn btn-default">
        
    </form>
